
<article class="feed flex flex-col md:flex-row {{post_class}}">
  {{!-- <img src="{{img_url feature_image size="s"}}" alt="{{title}}" class="h-48">  --}}
  
  <a href="{{url}}" class="mb-4 md:h-auto md:mr-4 md:mb-0">
    <img src="{{img_url feature_image size="s"}}" alt="{{title}}" class="object-cover h-auto md:max-w-sm md:h-60"> 
  </a>

  <div class="flex flex-col justify-between w-full h-48 my-2">
    {{!-- Tag and VIP --}}
      <div class="flex flex-row justify-between">
        {{#primary_tag}}
          <a class="p-2 m-0 border-2" href="{{url}}" style="color: {{accent_color}}; border-color: {{accent_color}}">
            {{name}}
          </a>
        {{/primary_tag}}
        
        {{#has visibility="paid"}}
          <div class="p-2 m-0 font-bold text-light-blue">
            ⭐️ Premium
          </div>
        {{/has}}

        {{#has visibility="members"}}
          <div class="p-2 m-0 font-bold text-light-blue">
            Members Only
          </div>
        {{/has}}
        
      </div>
      
      {{!-- Title --}}
      <a href="{{url}}">  
        <h2 class="m-0 text-4xl">
          {{title}}
        </h2>
      </a>

      {{!-- Date, Reading Time & Read More --}}
      <div class="flex flex-row justify-between text-2xl">
        {{!-- Date and Reading time --}}
        <span>
        {{date published_at format="MMM D, YYYY"}} {{#if access }} | {{reading_time}} {{else}} {{/if}}
        </span>
        {{!-- Read More --}}
        <a href="{{url}}">
            Read More >
        </a>
      </div>


  </div>

</article>
